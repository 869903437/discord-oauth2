{% extends "layout.html" %}
{% block content %}

  <div>
    <h2>Vacation Service or New Area Request</h2>
    <p>Click the button below to pay <b>{{ "${:,.2f}".format(amount/100) }}</b> for the <b>{{ area }}</b> area.</p>
    <br>

    <form action="/subscribe/success?id={{ id }}&plan=charge&amount={{ amount }}&area={{ area }}" method="post">

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="{{ key }}"
              <!-- data-image="/Discord-OAuth2/static/logo.png" -->
              <!-- data-name="" -->
              data-description="One-Time Payment"
              data-amount="{{ amount }}"
              data-locale="auto"
              data-zip-code="true"
              data-email="{{ email }}"></script>
    </form>
  </div>

{% endblock %}