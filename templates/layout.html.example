    .top {
      <!-- background: url("/Discord-OAuth2/static/banner_top.png"); -->
      background-size: 100% 219px;
      background-repeat: no-repeat;
      margin: -8px;
    }

    .bottom {
      <!-- background: url("/Discord-OAuth2/static/banner_bottom.png"); -->
      background-size: 100% 196px;
      background-repeat: no-repeat;
      margin: -10px;
    }

    .content {
      max-width: 480px;
      margin: auto;
      text-align: center;
    }

    .left {
      text-align: left;
      display: inline-block
    }

    .fineprint {
      font-size: 8pt;
    }

    img {
      width: 100%;
    }

    form article label {
      display: block;
      margin: 5px;
    }

    form .submit {
      margin: 15px 0;
    }
  </style>
</head>
<body>
  <div class="top">
    <div class="content">
      <!-- <img src="/Discord-OAuth2/static/logo.png" alt="Logo"> -->
    </div>
  </div>
  <div>
